  <script>
    // Anima√ß√£o do logo - efeito de entrada letter by letter
    const logo = document.getElementById('logo');
    logo.innerHTML = logo.textContent.replace(/\S/g, "<span class='letter'>$&</span>");

    anime.timeline({loop: false})
      .add({
        targets: '#logo .letter',
        translateY: [50, 0],
        opacity: [0,1],
        easing: "easeOutExpo",
        duration: 800,
        delay: (el, i) => 30 * i
      })
      .add({
        targets: '#subtitle',
        opacity: [0, 1],
        translateY: [20, 0],
        easing: 'easeOutExpo',
        duration: 1000,
        delay: 200
      })
      .add({
        targets: '#btnPlay',
        opacity: [0, 1],
        scale: [0.7, 1],
        easing: 'easeOutElastic(1, .6)',
        duration: 1500
      });

    // Evento clique no bot√£o jogar
    document.getElementById('btnPlay').addEventListener('click', () => {
      alert('Vamos come√ßar a jogar! üéâ');
      // Aqui pode iniciar a transi√ß√£o para a pr√≥xima tela do jogo
